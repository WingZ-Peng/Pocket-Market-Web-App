<%- include ('../partials/header.ejs') %>

<% if(currentUser && currentUser.isAdimn){ %>
    <h1>Logged in as Admin</h1>
<% } %>

<div class = "container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class ="fas fa-utensil"></i>Welcome to PocketMarket</h1>
            <p>A place to find out the most convinient store nearby you</p>
            <p>
                <a class ="btn btn-primary btn-lg" href="/PocketMarket/new">Add a new market</a>
            </p>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap">
        <% pocketMarkets.forEach(function(pocketMarket){ %>
            <div class= "col-lg-9 col-md-9 col-sm-9 col-centered">
                <div class="thumbnail">
                    <img src="<%= pocketMarket.image %>" >
                    <div class="caption">
                        <h4><%= pocketMarket.name%></h4>
                    </div>
                    <p>
                    <a href="/PocketMarket/<%= PocketMarket._id%>" class ="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>
