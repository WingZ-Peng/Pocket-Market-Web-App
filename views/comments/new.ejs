<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <div col-lg-12 col-md-12 col-sm-12>
            <h1 style="text-align:center;">Add New Comment to <%=p_market.name %></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/p_markets/<%= p_market._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group"> 
                   <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/p_markets/<%= p_market._id %>" class="btn btn-xs btn-warning" >Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>