<%- include ('../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div col-lg-12 col-md-12 col-sm-12>
            <h1 style="text-align:center;">Edit <%=p_market.name %></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/p_markets/<%=p_market._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="p_market[name]">Name</label>
                        <input class="form-control" type="text" name="p_market[name]" value="<%= p_market.name %>">
                    </div>
                    <div class="form-group"> 
                        <label for="image">New Image</label>
                        <input type="file" id="image" name="image" accept="image/*" >
                    </div>
                    <div class="form-group">
                        <label for="p_market[description]">Description</label>
                        <input class="form-control" type="text" name="p_market[description]" value="<%= p_market.description%>">
                    </div>
                    <div class="form-group"> 
                   <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/p_markets/<%=p_market._id %>" class="btn btn-xs btn-warning" >Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>